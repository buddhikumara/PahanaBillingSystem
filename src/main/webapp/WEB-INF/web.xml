<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         version="4.0">
  <display-name>PahanaBillingSystem</display-name>


  <!-- Logout -->
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.pahana.presentation.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>login</welcome-file>
    <!-- maps to /login servlet -->
    <!-- OR if you want the JSP file itself: -->
    <!-- <welcome-file>login.jsp</welcome-file> -->
  </welcome-file-list>
  <!-- DO NOT manually declare CustomerServlet here -->
</web-app>
